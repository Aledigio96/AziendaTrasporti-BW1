<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xmlns="https://jakarta.ee/xml/ns/persistence"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
                                 https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="AziendaTrasporti">
        <class>buildWeek.entities.Mezzo</class>
        <class>buildWeek.entities.Distributore</class>
        <class>buildWeek.entities.Amministratore</class>
        <class>buildWeek.entities.Tessera</class>
        <class>buildWeek.entities.Utente</class>
        <class>buildWeek.entities.Abbonamento</class>
        <class>buildWeek.entities.DistributoriAutomatici</class>
        <class>buildWeek.entities.Biglietto</class>
        <class>buildWeek.entities.RivenditoriAutorizzati</class>
        <class>buildWeek.entities.Tratta</class>

        <class>riccardogulin.entities.Animal</class>
        <class>riccardogulin.entities.Cat</class>
        <class>riccardogulin.entities.Dog</class>
        <class>riccardogulin.entities.Owner</class>
        <properties>
            <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/aziendatrasporti"/>

            <property name="javax.persistence.jdbc.user" value="postgres"/>
            <property name="javax.persistence.jdbc.password" value="1234"/>
            <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>

            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>